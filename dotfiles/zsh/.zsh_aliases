#!/usr/bin/env zsh

alias _="sudo"

alias cl="clear"
alias ex="exit"

alias git="hub"
alias rm="trash"

alias os-hidden-hide="defaults write com.apple.finder AppleShowAllFiles -bool false && refresh"
alias os-desktop-show="defaults write com.apple.finder CreateDesktop -bool true && refresh"
alias os-desktop-hide="defaults write com.apple.finder CreateDesktop -bool false && refresh"

alias allo="ping -c 3 www.google.com"
alias copyssh="pbcopy < $HOME/.ssh/id_rsa.pub"
alias hosts="sudo e /etc/hosts"
alias path="echo -e ${PATH//:/\\n}"
alias reload="exec $SHELL -l"
alias rmds="find . -type f -name '*.DS_Store' -ls -delete"
alias prefs=". $SETUP/_functions/prefs.zsh"

alias c="composer"
alias d="docker"
alias dc="docker-compose"
alias e="$EDITOR"
alias f="find"
alias g="git"
alias h="history"
alias n="npm"
alias na="nano"
alias o="open"
alias t="tree"
alias y="yarn"

alias desktop="cd $DESKTOP"
alias downloads="cd $DOWNLOADS"
alias projects="cd $PROJECTS"
alias sandbox="cd $SANDBOX"
alias setup="cd $SETUP"

alias _desktop="e $DESKTOP"
alias _downloads="e $DOWNLOADS"
alias _projects="e $PROJECTS"
alias _sandbox="e $SANDBOX"
alias _setup="e $SETUP"

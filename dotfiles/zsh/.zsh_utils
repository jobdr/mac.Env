#!/usr/bin/env zsh

function fs ()
{
  if du -b /dev/null > /dev/null 2>&1
  then
    local arg=-sbh
  else
    local arg=-sh
  fi

  if [[ -n "$@" ]] then
    du $arg -- "$@"
  else
    du $arg .[^.]* ./*
  fi
}

function mcd ()
{
  mkdir -p -- "$@" && cd -- "$@"
}

function myip ()
{
  myip=$(ifconfig en0 | grep inet | awk '$1=="inet" {print $2}')
  echo $myip
}

function please ()
{
  CMD=$(history -1 | cut -d" " -f4-)
  sudo "$CMD"
}

function refresh ()
{
  killall -u $USER cfprefsd
  sleep 2
  killall Dock Finder SystemUIServer NotificationCenter
}

function rmds ()
{
  sudo find / -name ".DS_Store" -delete
  killall Finder
}

function showcolors ()
{
  for code in {000..255}
  do
    print -nP -- "%F{$code}$code %f"; [ $((${code} % 16)) -eq 15 ] && echo
  done
}

#!/usr/bin/env zsh

. /usr/local/share/antigen/antigen.zsh

antigen use oh-my-zsh

antigen bundles <<EOBUNDLES
  zsh-users/zsh-autosuggestions
  zsh-users/zsh-completions
  zsh-users/zsh-syntax-highlighting
EOBUNDLES

POWERLEVEL9K_INSTALLATION_PATH=$ANTIGEN_BUNDLES/bhilburn/powerlevel9k
POWERLEVEL9K_MODE="nerdfont-complete"

POWERLEVEL9K_PROMPT_ON_NEWLINE=true
POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX="%F{004}\u256D\u2500%f"
POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="%F{004}\u2570\uf460%f "

POWERLEVEL9K_LEFT_SEGMENT_SEPARATOR=""
POWERLEVEL9K_LEFT_SUBSEGMENT_SEPARATOR=""
POWERLEVEL9K_RIGHT_SEGMENT_SEPARATOR=""
POWERLEVEL9K_RIGHT_SUBSEGMENT_SEPARATOR=""

POWERLEVEL9K_SHORTEN_STRATEGY="none"
POWERLEVEL9K_SHORTEN_DIR_LENGTH=2

POWERLEVEL9K_TIME_FORMAT="%D{%H:%M}"

POWERLEVEL9K_BATTERY_VERBOSE=false
POWERLEVEL9K_BATTERY_LOW_THRESHOLD="20"

POWERLEVEL9K_ETC_ICON="%F{015}\uF109%f "
POWERLEVEL9K_ROOT_ICON="%F{004}\ufb8a%f"
POWERLEVEL9K_SUDO_ICON="%F{004}\ufb8a%f"
POWERLEVEL9K_USER_ICON="%F{004}\ufb8a%f"
POWERLEVEL9K_HOME_ICON="%F{015}\uF109%f "
POWERLEVEL9K_HOME_SUB_ICON="%F{015}\uF109%f "
POWERLEVEL9K_VCS_GIT_ICON=""
POWERLEVEL9K_VCS_GIT_BITBUCKET_ICON=""
POWERLEVEL9K_VCS_GIT_GITHUB_ICON=""
POWERLEVEL9K_VCS_GIT_GITLAB_ICON=""

POWERLEVEL9K_USER_DEFAULT_BACKGROUND="none"
POWERLEVEL9K_USER_SUDO_BACKGROUND="none"
POWERLEVEL9K_USER_ROOT_BACKGROUND="none"
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND="none"
POWERLEVEL9K_DIR_ETC_BACKGROUND="none"
POWERLEVEL9K_DIR_HOME_BACKGROUND="none"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND="none"
POWERLEVEL9K_VCS_CLEAN_BACKGROUND="none"
POWERLEVEL9K_VCS_MODIFIED_BACKGROUND="none"
POWERLEVEL9K_VCS_UNTRACKED_BACKGROUND="none"
POWERLEVEL9K_BATTERY_LOW_BACKGROUND="none"
POWERLEVEL9K_BATTERY_CHARGED_BACKGROUND="none"
POWERLEVEL9K_BATTERY_CHARGING_BACKGROUND="none"
POWERLEVEL9K_BATTERY_DISCONNECTED_BACKGROUND="none"
POWERLEVEL9K_TIME_BACKGROUND="none"

POWERLEVEL9K_USER_DEFAULT_FOREGROUND="004"
POWERLEVEL9K_USER_SUDO_FOREGROUND="004"
POWERLEVEL9K_USER_ROOT_FOREGROUND="004"
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND="015"
POWERLEVEL9K_DIR_ETC_FOREGROUND="015"
POWERLEVEL9K_DIR_HOME_FOREGROUND="015"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND="015"
POWERLEVEL9K_VCS_CLEAN_FOREGROUND="002"
POWERLEVEL9K_VCS_MODIFIED_FOREGROUND="228"
POWERLEVEL9K_VCS_UNTRACKED_FOREGROUND="001"
POWERLEVEL9K_BATTERY_LOW_FOREGROUND="001"
POWERLEVEL9K_BATTERY_CHARGED_FOREGROUND="002"
POWERLEVEL9K_BATTERY_CHARGING_FOREGROUND="228"
POWERLEVEL9K_BATTERY_DISCONNECTED_FOREGROUND="228"
POWERLEVEL9K_TIME_FOREGROUND="015"

POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(user dir_joined vcs_joined)
POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(battery time)

antigen theme bhilburn/powerlevel9k powerlevel9k

antigen apply
